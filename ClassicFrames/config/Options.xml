<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\Blizzard_SharedXML\UI.xsd">
	<Script file="Options.lua"/>
	<CheckButton name="CfOptionsCheckButtonTemplate" virtual="true">
		<Size x="15" y="15"/>
		<HitRectInsets>
			<AbsInset left="0" right="-100" top="0" bottom="0"/>
		</HitRectInsets>
		<NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
		<PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
		<HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
		<CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
		<DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
	</CheckButton>
	<Frame name="CfOptionsButtonBehaviorTemplate" mixin="CfOptionsButtonBehaviorMixin" virtual="true">
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>
	<Button name="CfOptionsMenuButtonTemplate" inherits="CfOptionsButtonBehaviorTemplate" virtual="true">
		<Size x="132" y="20"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="NormalTexture" atlas="auctionhouse-nav-button" useAtlasSize="false">
					<Size x="136" y="32"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="-2" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="HighlightTexture" atlas="auctionhouse-nav-button-highlight" hidden="true">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="MouseoverOverlay" hidden="true" atlas="auctionhouse-nav-button" useAtlasSize="false" alphaMode="ADD"/>
				<FontString parentKey="Label" inherits="GameFontHighlight">
					<Size x="180" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Button>
	<Button name="CfOptionsScrollBoxButtonTemplate" inherits="CfOptionsButtonBehaviorTemplate" mixin="CfOptionsScrollBoxButtonMixin" virtual="true">
		<Size y="20"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture>
					<Color r=".1" g=".1" b=".1" a="1"/>
				</Texture>
				<Texture parentKey="Alternate" hidden="true" alphaMode="ADD">
					<Color r=".02" g=".02" b=".02" a="1"/>
				</Texture>
				<Texture parentKey="MouseoverOverlay" hidden="true" alphaMode="ADD">
					<Color r=".1" g=".1" b=".1" a="1"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="FlashOverlay">
					<Color r="1" b="1" g="1" a=".5"/>
					<Animations>
						<AnimationGroup parentKey="Anim" setToFinalAlpha="true" inherits="VisibleWhilePlayingAnimGroupTemplate">
							<Alpha fromAlpha="0.5" toAlpha="1" duration="0.5" order="1" smoothing="IN"/>
							<Alpha fromAlpha="1" toAlpha="0.0" duration="0.5" order="2" smoothing="IN"/>
						</AnimationGroup>
					</Animations>
				</Texture>
			</Layer>
		</Layers>
	</Button>
	<Button name="CfOptionsLogEventButtonTemplate" inherits="CfOptionsScrollBoxButtonTemplate" registerForClicks="AnyUp" mixin="CfOptionsLogEventButtonMixin" virtual="true">
		<Size y="20"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="RightLabel" inherits="GameFontHighlightSmall" justifyH="RIGHT">
					<Size y="20"/>
					<Anchors>
						<Anchor point="RIGHT" x="-5"/>
					</Anchors>
				</FontString>
				<FontString parentKey="LeftLabel" inherits="GameFontHighlightSmall" wordwrap="false" justifyH="LEFT">
					<Size y="20"/>
					<Anchors>
						<Anchor point="LEFT" x="24"/>
						<Anchor point="RIGHT" relativeKey="$parent.RightLabel" relativePoint="LEFT" x="-5"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="HideButton" inherits="UIPanelCloseButtonNoScripts">
				<Size x="20" y="20"/>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Button>
	<Button name="CfOptionsLogMessageButtonTemplate" inherits="CfOptionsScrollBoxButtonTemplate" mixin="CfOptionsLogMessageButtonMixin" virtual="true">
		<Size x="100" y="20"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="RightLabel" inherits="GameFontHighlightSmall" justifyH="RIGHT">
					<Size y="20"/>
					<Anchors>
						<Anchor point="RIGHT" x="-5"/>
					</Anchors>
				</FontString>
				<FontString parentKey="LeftLabel" inherits="GameFontHighlightSmall" wordwrap="false" justifyH="LEFT">
					<Size y="20"/>
					<Anchors>
						<Anchor point="LEFT" x="24"/>
						<Anchor point="RIGHT" relativeKey="$parent.RightLabel" relativePoint="LEFT" x="-5"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Button>
	<Button name="CfOptionsFilterButtonTemplate" inherits="CfOptionsScrollBoxButtonTemplate" mixin="CfOptionsFilterButtonMixin" virtual="true">
		<Size x="100" y="20"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Label" inherits="GameFontHighlightSmall" justifyH="LEFT">
					<Size y="20"/>
					<Anchors>
						<Anchor point="LEFT" x="24"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="HideButton" inherits="UIPanelCloseButtonNoScripts">
				<Size x="20" y="20"/>
				<Anchors>
					<Anchor point="LEFT" x="3"/>
				</Anchors>
			</Button>
			<CheckButton parentKey="CheckButton" inherits="CfOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="RIGHT" x="-3"/>
				</Anchors>
			</CheckButton>
		</Frames>
		<Scripts>
			<OnDoubleClick method="OnDoubleClick"/>
		</Scripts>
	</Button>
	<Frame name="CfOptions" mixin="CfOptionsPanelMixin" inherits="ButtonFrameTemplate" parent="UIParent" toplevel="true" enableMouse="true" frameStrata="DIALOG">
		<Size x="540" y="424"/>
        <Anchors>
			<Anchor point="CENTER" x="0" y="24"/>
		</Anchors>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnHide method="OnHide"/>
		</Scripts>
	</Frame>
</Ui>