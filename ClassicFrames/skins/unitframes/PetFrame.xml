<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
UI_shared.xsd">
	<Script file="PetFrame.lua"/>
	<Button name="CfPetFrame" frameStrata="LOW" parent="UIParent">
		<Size x="128" y="53"/>
		<HitRectInsets>
			<AbsInset left="7" right="66" top="6" bottom="7"/>
		</HitRectInsets>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="CfPetFrameFlash" file="Interface\TargetingFrame\UI-PartyFrame-Flash" hidden="true">
					<Size x="128" y="64"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="-4" y="11"/>
					</Anchors>
					<TexCoords left="0" right="1.0" top="1.0" bottom="0"/>
				</Texture>
				<Texture name="CfPetPortrait">
					<Size x="37" y="37"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="7" y="-6"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="$parentTotalAbsorbBar" inherits="CfTotalAbsorbBarTemplate"/>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture name="$parentTotalAbsorbBarOverlay" inherits="CfTotalAbsorbBarOverlayTemplate"/>
			</Layer>
		</Layers>
		<Frames>
			<Frame setAllPoints="true">
				<Frames>
					<Frame setAllPoints="true">
						<Layers>
							<Layer level="BACKGROUND">
								<Texture name="$parentMyHealPredictionBar" inherits="CfMyHealPredictionBarTemplate"/>
								<Texture name="$parentOtherHealPredictionBar" inherits="CfOtherHealPredictionBarTemplate"/>
								<Texture name="$parentHealAbsorbBar" inherits="CfHealAbsorbBarTemplate"/>
								<Texture name="$parentHealAbsorbBarLeftShadow" inherits="CfHealAbsorbBarLeftShadowTemplate"/>
								<Texture name="$parentHealAbsorbBarRightShadow" inherits="CfHealAbsorbBarRightShadowTemplate"/>
							</Layer>
							<Layer level="BORDER">
								<Texture name="CfPetFrameTexture" file="Interface\TargetingFrame\UI-SmallTargetingFrame">
									<Size x="128" y="64"/>
									<Anchors>
										<Anchor point="TOPLEFT" x="0" y="-2"/>
									</Anchors>
								</Texture>
								<FontString name="CfPetHitIndicator" hidden="true" inherits="NumberFontNormalHuge">
									<Anchors>
										<Anchor point="CENTER" relativePoint="TOPLEFT" x="28" y="-27"/>
									</Anchors>
								</FontString>
								<FontString name="CfPetFrameHealthBarText" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="CENTER" relativePoint="TOPLEFT" x="82" y="-26"/>
									</Anchors>
								</FontString>
								<FontString name="CfPetFrameHealthBarTextLeft" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="LEFT" relativePoint="TOPLEFT" x="46" y="-26"/>
									</Anchors>
								</FontString>
								<FontString name="CfPetFrameHealthBarTextRight" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="RIGHT" relativePoint="TOPLEFT" x="113" y="-26"/>
									</Anchors>
								</FontString>
								<FontString name="CfPetFrameManaBarText" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="CENTER" relativePoint="TOPLEFT" x="82" y="-35"/>
									</Anchors>
								</FontString>
								<FontString name="CfPetFrameManaBarTextLeft" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="LEFT" relativePoint="TOPLEFT" x="46" y="-35"/>
									</Anchors>
								</FontString>
								<FontString name="CfPetFrameManaBarTextRight" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="RIGHT" relativePoint="TOPLEFT" x="113" y="-35"/>
									</Anchors>
								</FontString>
							</Layer>
							<Layer level="ARTWORK">
								<FontString name="CfPetName" inherits="GameFontNormalSmall" justifyV="BOTTOM" justifyH="LEFT">
									<Size x="140" y="0"/>
									<Anchors>
										<Anchor point="BOTTOMLEFT" x="52" y="33"/>
									</Anchors>
								</FontString>
								<Texture name="CfPetAttackModeTexture" file="Interface\TargetingFrame\UI-Player-AttackStatus" alphaMode="ADD" hidden="true">
									<Size x="76" y="64"/>
									<Anchors>
										<Anchor point="TOPLEFT" x="6" y="-9"/>
									</Anchors>
									<TexCoords left="0.703125" right="1.0" top="0" bottom="1.0"/>
								</Texture>
								<Texture name="$parentOverAbsorbGlow" inherits="CfOverAbsorbGlowTemplate"/>
								<Texture name="$parentOverHealAbsorbGlow" inherits="CfOverHealAbsorbGlowTemplate"/>
							</Layer>
						</Layers>
					</Frame>
				</Frames>
			</Frame>
			<StatusBar name="CfPetFrameHealthBar" inherits="TextStatusBar">
				<Size x="69" y="8"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="47" y="-22"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						TextStatusBar_Initialize(self);
						self.textLockable = 1;
						self.cvar = "statusText";
						self.cvarLabel = "STATUS_TEXT_PET";
					</OnLoad>
					<OnValueChanged function="CfUnitFrameHealthBar_OnValueChanged"/>
					<OnSizeChanged>
						CfUnitFrameHealPredictionBars_UpdateSize(self:GetParent());
					</OnSizeChanged>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
			</StatusBar>
			<StatusBar name="CfPetFrameManaBar" inherits="TextStatusBar">
				<Size x="69" y="8"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="47" y="-29"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						TextStatusBar_Initialize(self);
						self.textLockable = 1;
						self.cvar = "statusText";
						self.cvarLabel = "STATUS_TEXT_PET";
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0" g="0" b="1.0"/>
			</StatusBar>
		</Frames>
		<Scripts>
			<OnLoad function="PetFrame_OnLoad"/>
			<OnEvent function="PetFrame_OnEvent"/>
			<OnShow>
				CfUnitFrame_Update(self);
				PetFrame_Update(self);
			</OnShow>
			<OnHide>
				PetFrame_Update(self);
			</OnHide>
			<OnUpdate function="PetFrame_OnUpdate"/>
		</Scripts>
	</Button>
</Ui>