<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
UI_shared.xsd">
	<Script file="TargetFrame.lua"/>
	<Button name="CfTargetFrame" parent="TargetFrame">
		<Size x="232" y="100"/>
		<Anchors>
			<Anchor point="TOPLEFT" x="20" y="-4"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="TargetFrameBackground">
					<Anchors>
						<Anchor point="BOTTOMLEFT" x="7" y="35"/>
					</Anchors>
					<Color r="0" g="0" b="0" a="0.5"/>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="$parentTotalAbsorbBar" inherits="CfTotalAbsorbBarTemplate"/>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture name="$parentTotalAbsorbBarOverlay" inherits="CfTotalAbsorbBarOverlayTemplate"/>
			</Layer>
		</Layers>
		<Frames>
			<Frame setAllPoints="true">
				<Frames>
					<Frame setAllPoints="true">
						<Layers>
							<Layer level="BACKGROUND">
								<Texture name="$parentMyHealPredictionBar" inherits="CfMyHealPredictionBarTemplate"/>
								<Texture name="$parentOtherHealPredictionBar" inherits="CfOtherHealPredictionBarTemplate"/>
								<Texture name="$parentHealAbsorbBar" inherits="CfHealAbsorbBarTemplate"/>
								<Texture name="$parentHealAbsorbBarLeftShadow" inherits="CfHealAbsorbBarLeftShadowTemplate"/>
								<Texture name="$parentHealAbsorbBarRightShadow" inherits="CfHealAbsorbBarRightShadowTemplate"/>
								<FontString name="TargetFrameDeadText" inherits="GameFontNormalSmall" text="DEAD">
									<Anchors>
										<Anchor point="CENTER" x="-50" y="3"/>
									</Anchors>
								</FontString>
								<FontString name="TargetFrameUnconsciousText" inherits="GameFontNormalSmall" text="UNCONSCIOUS">
									<Anchors>
										<Anchor point="CENTER" x="-50" y="3"/>
									</Anchors>
								</FontString>
								<FontString name="TargetFrameHealthBarText" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="CENTER" x="-50" y="3"/>
									</Anchors>
								</FontString>
								<FontString name="TargetFrameHealthBarTextLeft" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="LEFT" x="7" y="3"/>
									</Anchors>
								</FontString>
								<FontString name="TargetFrameHealthBarTextRight" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="RIGHT" x="-110" y="3"/>
									</Anchors>
								</FontString>
								<FontString name="TargetFrameManaBarText" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="CENTER" x="-50" y="-8"/>
									</Anchors>
								</FontString>
								<FontString name="TargetFrameManaBarTextLeft" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="LEFT" x="7" y="-8"/>
									</Anchors>
								</FontString>
								<FontString name="TargetFrameManaBarTextRight" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="RIGHT" x="-110" y="-8"/>
									</Anchors>
								</FontString>
							</Layer>
							<Layer level="ARTWORK" textureSubLevel="1">
								<Texture name="$parentOverAbsorbGlow" inherits="CfOverAbsorbGlowTemplate"/>
								<Texture name="$parentOverHealAbsorbGlow" inherits="CfOverHealAbsorbGlowTemplate"/>
							</Layer>
						</Layers>
					</Frame>
				</Frames>
			</Frame>
			<StatusBar name="TargetFrameHealthBar" inherits="TextStatusBar">
				<Size x="119" y="12"/>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-106" y="-41"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						TextStatusBar_Initialize(self);
						self.textLockable = 1;
						self.cvar = "statusText";
						self.cvarLabel = "STATUS_TEXT_TARGET";
						self.zeroText = "";
					</OnLoad>
					<OnValueChanged function="CfUnitFrameHealthBar_OnValueChanged"/>
					<OnSizeChanged>
						CfUnitFrameHealPredictionBars_UpdateSize(self:GetParent());
					</OnSizeChanged>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
			</StatusBar>
			<StatusBar name="TargetFrameManaBar" inherits="TextStatusBar">
				<Size x="119" y="12"/>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-106" y="-52"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						TextStatusBar_Initialize(self);
						self.textLockable = 1;
						self.cvar = "statusText";
						self.cvarLabel = "STATUS_TEXT_TARGET";
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0" g="0" b="1.0"/>
			</StatusBar>
		</Frames>
		<Scripts>
			<OnLoad function="CfTargetFrame_OnLoad"/>
			<OnEvent function="CfTargetFrame_OnEvent"/>
		</Scripts>
	</Button>
</Ui>